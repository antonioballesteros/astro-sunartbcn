---
export interface Props {
    id: string;
    nombre: string;
    imagen: string;
    descripcion: string;
}
const { id, nombre, imagen, descripcion } = Astro.props;
---

<a
    href={`/categoria/${id}`}
    class="group block bg-white border border-brand-100 rounded-2xl shadow-sm hover:shadow-lg transition-all duration-200 overflow-hidden focus:outline-none focus:ring-2 focus:ring-brand-400"
>
    <div
        class="aspect-square w-full overflow-hidden bg-brand-50 flex items-center justify-center"
    >
        <img
            src={imagen}
            alt={nombre}
            class="object-cover w-full h-full transition-transform duration-300 group-hover:scale-105"
            loading="lazy"
        />
    </div>
    <div class="p-4 flex flex-col items-center">
        <h3 class="text-lg font-semibold text-brand-700 mb-1 text-center">
            {nombre}
        </h3>
        <p class="text-sm text-gray-600 text-center mb-2">{descripcion}</p>
        <span
            class="inline-block mt-2 text-brand-600 font-medium text-sm group-hover:underline"
            >Ver productos â†’</span
        >
    </div>
</a>

