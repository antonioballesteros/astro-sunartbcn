---
export interface Props {
    id: string;
    nombre: string;
    imagen: string;
}
const { id, nombre, imagen } = Astro.props;
---

<a
    href={`/categoria/${id}`}
    class="flex items-center gap-4 bg-white rounded-full shadow-md px-4 py-2 transition-transform duration-200 hover:scale-105 hover:shadow-lg group"
>
    <div
        class="w-12 h-12 rounded-full overflow-hidden bg-brand-100 flex-shrink-0 border border-brand-200"
    >
        <img
            src={imagen}
            alt={nombre}
            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-200"
        />
    </div>
    <span class="font-medium text-brand-700 text-lg">{nombre}</span>
</a>

